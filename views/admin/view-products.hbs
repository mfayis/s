<section>
  <div class="container">
    <div class="row mt-2 "><a href="/admin/add-product" class="btn btn-success ml-auto ">Add Product</a></div>
    <table class="table mt-2" id="productsTable">
  <thead>
    <tr>
      <th scope="col">SL NO.</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-Product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-Product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You want to Delete {{this.Name}} ?')">Delete</a>
      </td>
       
    </tr>
    {{/each}}
  </tbody>
</table>
  </div>
</section>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>